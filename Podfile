source 'https://github.com/CocoaPods/Specs.git'

def shared_pods
    platform :ios, '7.0'
    pod 'Masonry', '~> 1.0.1'
    pod 'SDWebImage', '~> 3.7.3'
    pod 'AFNetworking', '~> 3.0.4'
    pod 'MBProgressHUD', '~> 0.9.2'
    pod 'Mantle', '~> 2.0.7'
    pod 'AFNetworkActivityLogger', :git => 'https://github.com/AFNetworking/AFNetworkActivityLogger', :branch => '3_0_0', :configurations => ['Debug']
    end

target 'ItunceApp' do
    shared_pods
end
